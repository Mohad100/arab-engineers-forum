@page
@model IndexModel
@{
    ViewData["Title"] = "Engineering Forum";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container-fluid" style="max-width: 1800px;">
        <div class="row align-items-center py-5">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title mb-4">
                        <span class="gradient-text">Welcome to</span><br/>
                        Engineering Forum
                    </h1>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-page="/CreateThread" class="btn btn-gradient btn-lg px-5 py-3">
                            <i class="bi bi-plus-circle me-2"></i>Start Discussion
                        </a>
                    }
                    else
                    {
                        <div class="hero-buttons">
                            <a asp-page="/Register" class="btn btn-gradient btn-lg px-5 py-3 me-3">
                                Join Now
                            </a>
                            <a asp-page="/Login" class="btn btn-outline-light btn-lg px-5 py-3">
                                Login
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-stats">
                    <div class="stat-card">
                        <div class="stat-icon">ðŸ‘¥</div>
                        <div class="stat-number">@Model.RecentThreads.Select(t => t.AuthorUsername).Distinct().Count()+</div>
                        <div class="stat-label">Active Members</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">ðŸ’¬</div>
                        <div class="stat-number">@Model.RecentThreads.Count</div>
                        <div class="stat-label">Discussions</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">ðŸ”¥</div>
                        <div class="stat-number">@Model.RecentThreads.Sum(t => t.ReplyCount)</div>
                        <div class="stat-label">Total Replies</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid my-5" style="max-width: 1800px;">
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show modern-alert" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Stats Dashboard -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm bg-white h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4 p-4 rounded-circle d-inline-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); width: 100px; height: 100px;">
                        <i class="bi bi-people-fill text-white" style="font-size: 3.5rem;"></i>
                    </div>
                    <h2 class="mb-2 fw-bold text-primary">@Model.TotalUsers</h2>
                    <p class="mb-0 text-muted">Total Members</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm bg-white h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4 p-4 rounded-circle d-inline-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); width: 100px; height: 100px;">
                        <i class="bi bi-chat-dots-fill text-white" style="font-size: 3.5rem;"></i>
                    </div>
                    <h2 class="mb-2 fw-bold text-success">@Model.RecentThreads.Count</h2>
                    <p class="mb-0 text-muted">Active Threads</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm bg-white h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-4 p-4 rounded-circle d-inline-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%); width: 100px; height: 100px;">
                        <i class="bi bi-calendar-check-fill text-white" style="font-size: 3.5rem;"></i>
                    </div>
                    <h2 class="mb-2 fw-bold text-info">@Model.ThreadsToday</h2>
                    <p class="mb-0 text-muted">Today's Threads</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Trending & Hot Topics -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-white">
                <div class="card-header bg-white border-0 pt-4 pb-3">
                    <h4 class="mb-0"><i class="bi bi-fire text-danger me-3" style="font-size: 1.8rem;"></i>Trending Topics</h4>
                    <p class="text-muted small mb-0">Most engaged this week</p>
                </div>
                <div class="card-body p-0">
                    @if (Model.TrendingThreads.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var thread in Model.TrendingThreads)
                            {
                                <a asp-page="/Thread" asp-route-id="@thread.Id" class="list-group-item list-group-item-action border-bottom py-3 px-4" style="text-decoration: none;">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="flex-grow-1 me-3">
                                            <h6 class="mb-2 fw-bold text-dark">@thread.Title</h6>
                                            <div class="d-flex align-items-center text-muted small">
                                                <i class="bi bi-person-circle me-1"></i>
                                                <span class="me-3">@thread.AuthorUsername</span>
                                                <i class="bi bi-clock me-1"></i>
                                                <span>@thread.CreatedAt.ToString("MM/dd/yyyy")</span>
                                            </div>
                                        </div>
                                        <span class="badge bg-danger rounded-pill px-3 py-2">
                                            <i class="bi bi-chat-fill me-1"></i>@thread.ReplyCount
                                        </span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-5">No trending topics yet</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-white">
                <div class="card-header bg-white border-0 pt-4 pb-3">
                    <h4 class="mb-0"><i class="bi bi-lightning-fill text-warning me-3" style="font-size: 1.8rem;"></i>Recent Activity</h4>
                    <p class="text-muted small mb-0">Latest discussions</p>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentThreads.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var thread in Model.RecentThreads)
                            {
                                <a asp-page="/Thread" asp-route-id="@thread.Id" class="list-group-item list-group-item-action border-bottom py-3 px-4" style="text-decoration: none;">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div class="flex-grow-1 me-3">
                                            <h6 class="mb-2 fw-bold text-dark">@thread.Title</h6>
                                            <div class="d-flex align-items-center text-muted small">
                                                <i class="bi bi-person-circle me-1"></i>
                                                <span class="me-3">@thread.AuthorUsername</span>
                                                <i class="bi bi-clock me-1"></i>
                                                <span>@thread.CreatedAt.ToString("MM/dd/yyyy HH:mm")</span>
                                            </div>
                                        </div>
                                        <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                            <i class="bi bi-chat-fill me-1"></i>@thread.ReplyCount
                                        </span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-5">No recent discussions</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Contributors -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-white">
                <div class="card-header bg-white border-0 pt-4 pb-3">
                    <h4 class="mb-0"><i class="bi bi-trophy-fill text-success me-3" style="font-size: 1.8rem;"></i>Top Contributors</h4>
                    <p class="text-muted small mb-0">Most active members</p>
                </div>
                <div class="card-body">
                    @if (Model.TopContributors.Any())
                    {
                        <div class="row g-3">
                            @for (int i = 0; i < Model.TopContributors.Count; i++)
                            {
                                var user = Model.TopContributors[i];
                                var medals = new[] { "ðŸ¥‡", "ðŸ¥ˆ", "ðŸ¥‰", "ðŸ…", "ðŸ…" };
                                <div class="col-md-2">
                                    <div class="text-center p-3 bg-light rounded">
                                        <div class="fs-1 mb-2">@medals[i]</div>
                                        <h6 class="mb-1">@user.Username</h6>
                                        @if (user.IsAdmin)
                                        {
                                            <span class="badge bg-danger small">Admin</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary small">Member</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No active members yet</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="section-header mb-5">
        <h2 class="section-title">Explore Categories</h2>
        <p class="section-subtitle">Find the perfect place to start your conversation</p>
    </div>

    <div class="category-rows mb-5">
        @foreach (var category in Fourm.Models.ForumCategory.AllCategories)
        {
            var threadCount = Model.CategoryThreadCounts.GetValueOrDefault(category.Id, 0);
            var latestThread = Model.LatestThreadsByCategory.GetValueOrDefault(category.Id);
            var categoryBgClass = $"category-bg-{category.Id}";
            
            <a asp-page="/Forum" asp-route-category="@category.Id" class="category-link">
                <div class="category-row-card @categoryBgClass">
                    <div class="category-row-icon">
                        <span class="category-icon-emoji">@category.Icon</span>
                    </div>
                    <div class="category-row-content">
                        <h5 class="category-row-name">@category.Name</h5>
                        <p class="category-row-desc">@category.Description</p>
                    </div>
                    <div class="category-row-stats">
                        <div class="stat-count">
                            <span class="stat-number">@threadCount</span>
                            <span class="stat-label">Threads</span>
                        </div>
                    </div>
                    @if (latestThread != null)
                    {
                        <div class="category-row-latest">
                            <div class="latest-thread-info">
                                <div class="latest-title">@latestThread.Title.Substring(0, Math.Min(40, latestThread.Title.Length))@(latestThread.Title.Length > 40 ? "..." : "")</div>
                                <div class="latest-meta">
                                    <span class="latest-author">@@@latestThread.AuthorUsername</span>
                                    <span class="latest-time">@latestThread.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="category-row-latest">
                            <div class="empty-state">
                                <span>No posts yet</span>
                            </div>
                        </div>
                    }
                </div>
            </a>
        }
    </div>
</div>

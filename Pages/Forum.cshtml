@page
@model ForumModel
@{
    ViewData["Title"] = "Forum";
    var categoryId = Model.CurrentCategory?.Id ?? "discussion";
}

<div class="forum-page" data-category="@categoryId">
    <!-- Header Section -->
    <div class="forum-header">
        <div class="forum-header-content">
            @if (Model.CurrentCategory != null)
            {
                <div class="category-header">
                    <div class="category-icon-large">@Model.CurrentCategory.Icon</div>
                    <div>
                        <h1 class="forum-title">@Model.CurrentCategory.Name</h1>
                        <p class="forum-description">@Model.CurrentCategory.Description</p>
                        <a asp-page="/Index" class="back-link">‚Üê Back to All Categories</a>
                    </div>
                </div>
            }
            else
            {
                <div>
                    <h1 class="forum-title">üí¨ All Topics</h1>
                    <p class="forum-description">Browse all discussions in the forum</p>
                </div>
            }
        </div>
        
        <div class="forum-header-action">
            @if (User.Identity?.IsAuthenticated == true)
            {
                @if (Model.CurrentCategory != null)
                {
                    <a asp-page="/CreateThread" asp-route-category="@Model.CurrentCategory.Id" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>New Topic
                    </a>
                }
                else
                {
                    <a asp-page="/CreateThread" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>New Topic
                    </a>
                }
            }
            else
            {
                <a asp-page="/Login" class="btn btn-outline-primary btn-lg">
                    Login to Post
                </a>
            }
        </div>
    </div>

    <!-- Threads Section -->
    @if (Model.Threads.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-state-icon">üì≠</div>
            <h2 class="empty-state-title">No Topics Yet</h2>
            <p class="empty-state-text">Be the first to start a conversation in this section.</p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                @if (Model.CurrentCategory != null)
                {
                    <a asp-page="/CreateThread" asp-route-category="@Model.CurrentCategory.Id" class="btn btn-primary btn-lg mt-4">
                        Create First Topic
                    </a>
                }
                else
                {
                    <a asp-page="/CreateThread" class="btn btn-primary btn-lg mt-4">
                        Create First Topic
                    </a>
                }
            }
        </div>
    }
    else
    {
        <div class="threads-section">
            <div class="threads-grid">
                @foreach (var thread in Model.Threads)
                {
                    var category = ForumCategory.GetById(thread.CategoryId);
                    <div class="thread-card @(thread.IsPinned ? "pinned" : "") @(thread.IsLocked ? "locked" : "")">
                        <div class="thread-card-header">
                            <div class="thread-author-info">
                                <div class="thread-avatar-lg">
                                    @thread.AuthorUsername.Substring(0, 1).ToUpper()
                                </div>
                                <div class="thread-author-details">
                                    <a asp-page="/UserProfile" asp-route-username="@thread.AuthorUsername" class="thread-author-name">
                                        @thread.AuthorUsername
                                    </a>
                                    <span class="thread-posted-time">
                                        @{
                                            var minutesAgo = (int)(DateTime.UtcNow - thread.CreatedAt).TotalMinutes;
                                            if (minutesAgo < 1)
                                            {
                                                <text>now</text>
                                            }
                                            else if (minutesAgo < 60)
                                            {
                                                @minutesAgo <text>m ago</text>
                                            }
                                            else if ((int)(DateTime.UtcNow - thread.CreatedAt).TotalHours < 24)
                                            {
                                                @((int)(DateTime.UtcNow - thread.CreatedAt).TotalHours) <text>h ago</text>
                                            }
                                            else if ((int)(DateTime.UtcNow - thread.CreatedAt).TotalDays < 7)
                                            {
                                                @((int)(DateTime.UtcNow - thread.CreatedAt).TotalDays) <text>d ago</text>
                                            }
                                            else
                                            {
                                                @thread.CreatedAt.ToString("MMM dd, yyyy")
                                            }
                                        }
                                    </span>
                                </div>
                            </div>
                            <div class="thread-badges">
                                @if (Model.CurrentCategory == null && category != null)
                                {
                                    <span class="badge-category">@category.Icon @category.Name</span>
                                }
                                @if (thread.IsPinned)
                                {
                                    <span class="badge-pinned">üìå Pinned</span>
                                }
                                @if (thread.IsLocked)
                                {
                                    <span class="badge-locked">üîí Locked</span>
                                }
                            </div>
                        </div>
                        
                        <div class="thread-card-body">
                            <h3 class="thread-card-title">
                                <a asp-page="/Thread" asp-route-id="@thread.Id" class="thread-title-link">
                                    @thread.Title
                                </a>
                            </h3>
                            <p class="thread-card-excerpt">
                                @(thread.Content.Length > 180 ? thread.Content.Substring(0, 180) + "..." : thread.Content)
                            </p>
                        </div>
                        
                        <div class="thread-card-footer">
                            <div class="thread-stats">
                                <div class="stat-group">
                                    <i class="bi bi-chat-dots"></i>
                                    <span>@thread.ReplyCount replies</span>
                                </div>
                                @if (thread.ReplyCount > 0)
                                {
                                    <div class="stat-group">
                                        <i class="bi bi-clock-history"></i>
                                        <span>
                                            @{
                                                var lastReplyMinutes = (int)(DateTime.UtcNow - thread.LastReplyAt).TotalMinutes;
                                                if (lastReplyMinutes < 1)
                                                {
                                                    <text>last reply now</text>
                                                }
                                                else if (lastReplyMinutes < 60)
                                                {
                                                    @lastReplyMinutes <text>m</text>
                                                }
                                                else if ((int)(DateTime.UtcNow - thread.LastReplyAt).TotalHours < 24)
                                                {
                                                    @((int)(DateTime.UtcNow - thread.LastReplyAt).TotalHours) <text>h</text>
                                                }
                                                else
                                                {
                                                    @((int)(DateTime.UtcNow - thread.LastReplyAt).TotalDays) <text>d</text>
                                                }
                                            }
                                        </span>
                                    </div>
                                }
                            </div>
                            <a asp-page="/Thread" asp-route-id="@thread.Id" class="thread-read-more">
                                Read More <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@page
@model RegisterPageModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">
        <!-- Terms and Conditions Section -->
        <div class="card shadow-sm border-0 mt-4 mb-4">
            <div class="card-header bg-primary text-white py-3">
                <h4 class="mb-0 text-center">
                    <i class="bi bi-file-text me-2"></i>
                    Terms and Conditions - International Engineering Forum
                </h4>
            </div>
            <div class="card-body p-4 bg-light" style="max-height: 400px; overflow-y: auto;">
                <div class="regulations-content" style="line-height: 2;">
                    
                    <div class="alert alert-info border-end border-primary border-4 mb-3">
                        <strong>Welcome to the International Engineering Forum</strong><br>
                        This forum is dedicated to the exchange of engineering knowledge and expertise in a framework of respect and commitment to professional standards and international values.
                    </div>

                    <h5 class="text-primary fw-bold mt-3 mb-2">
                        <i class="bi bi-1-circle-fill me-2"></i>Professional Conduct
                    </h5>
                    <ul class="mb-3">
                        <li>All members must respect professional engineering ethics</li>
                        <li>Maintain courtesy and professionalism in all interactions</li>
                        <li>Respect diverse opinions and cultural backgrounds</li>
                        <li>Share knowledge constructively and encourage collaborative learning</li>
                    </ul>

                    <h5 class="text-danger fw-bold mt-3 mb-2">
                        <i class="bi bi-2-circle-fill me-2"></i>Prohibited Content
                    </h5>
                    <ul class="mb-3">
                        <li><strong>Inappropriate Content:</strong> No pornographic, offensive, or explicit material</li>
                        <li><strong>Hate Speech:</strong> No discrimination based on race, religion, gender, or nationality</li>
                        <li><strong>Personal Attacks:</strong> No bullying, harassment, or abusive language</li>
                        <li><strong>Illegal Content:</strong> No content that violates international laws</li>
                        <li><strong>Spam:</strong> No unsolicited advertising or promotional content</li>
                    </ul>

                    <h5 class="text-success fw-bold mt-3 mb-2">
                        <i class="bi bi-3-circle-fill me-2"></i>Community Guidelines
                    </h5>
                    <ul class="mb-3">
                        <li>Use respectful and professional language in all posts</li>
                        <li>Stay on topic and contribute meaningfully to discussions</li>
                        <li>Welcome new members and help them navigate the forum</li>
                        <li>Cite sources when sharing technical information</li>
                        <li>Report violations to moderators instead of engaging in conflicts</li>
                    </ul>

                    <h5 class="text-warning fw-bold mt-3 mb-2">
                        <i class="bi bi-4-circle-fill me-2"></i>Enforcement Policy
                    </h5>
                    <p class="mb-2">In case of violations, the administration reserves the right to:</p>
                    <ul class="mb-3">
                        <li>Issue warnings to members</li>
                        <li>Remove violating content</li>
                        <li>Suspend or permanently ban user accounts</li>
                        <li>Report serious violations to relevant authorities</li>
                    </ul>

                    <div class="alert alert-warning border-end border-warning border-4 mt-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Important Notice:</strong> By registering on this forum, you agree to abide by all these terms and conditions.
                    </div>
                </div>
            </div>
        </div>

        <!-- Registration Form -->
        <div class="card shadow-sm border-0 mb-5">
            <div class="card-body p-5">
                <h2 class="text-center mb-4 fw-bold text-primary">Join Us! âœ¨</h2>
                <p class="text-center text-muted mb-4">
                    Create your account and become part of the global engineering community
                </p>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Username" class="form-label fw-semibold">
                            <i class="bi bi-person-fill me-1"></i>Username
                        </label>
                        <input asp-for="Input.Username" class="form-control form-control-lg rounded-pill" placeholder="Choose a unique username" />
                        <span asp-validation-for="Input.Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope-fill me-1"></i>Email (Optional)
                        </label>
                        <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill" placeholder="your@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold">
                            <i class="bi bi-lock-fill me-1"></i>Password
                        </label>
                        <input asp-for="Input.Password" class="form-control form-control-lg rounded-pill" placeholder="At least 6 characters" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">
                            <i class="bi bi-shield-lock-fill me-1"></i>Confirm Password
                        </label>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg rounded-pill" placeholder="Re-enter password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <div class="card border-primary">
                            <div class="card-body">
                                <div class="form-check">
                                    <input asp-for="Input.AcceptTerms" class="form-check-input" type="checkbox" id="acceptTerms" />
                                    <label class="form-check-label fw-bold text-primary" for="acceptTerms">
                                        <i class="bi bi-check2-square me-1"></i>
                                        I agree to all the terms and conditions mentioned above and commit to professional conduct
                                    </label>
                                </div>
                                <span asp-validation-for="Input.AcceptTerms" class="text-danger small d-block mt-2"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3">
                            <i class="bi bi-person-check-fill me-2"></i>Create My Account ðŸŽ‰
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <p class="text-center text-muted mb-0">
                    Already have an account? 
                    <a asp-page="/Login" class="text-decoration-none fw-semibold">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login Here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
